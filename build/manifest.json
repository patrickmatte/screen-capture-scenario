{
	"name": "Scroll Capture",
	"version": "0.0.1",
	"description": "Automate scrolling and mouse actions for your portfolio screen captures.",
	"permissions": [
		"activeTab",
		"storage",
		"tabCapture"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"js": [
				"content.js"
			],
			"css": [
				"content.css",
				"fontawesome.css",
				"icofont.css"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			]
		}
	],
	"web_accessible_resources":[
		"video-recording.html",
		"assets/fonts/*",
		"assets/fonts/*/*",
		"assets/images/*"
	],
	"browser_action": {
		"default_icon": {
			"16": "assets/images/get_started16.png",
			"32": "assets/images/get_started32.png",
			"48": "assets/images/get_started48.png",
			"128": "assets/images/get_started128.png"
		}
	},
	"icons": {
		"16": "assets/images/get_started16.png",
		"32": "assets/images/get_started32.png",
		"48": "assets/images/get_started48.png",
		"128": "assets/images/get_started128.png"
	},
	"manifest_version": 2
}
